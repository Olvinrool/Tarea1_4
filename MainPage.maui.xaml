<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Tarea1_4"
             x:Class="Tarea1_4.MainPage">

    <StackLayout>
        <Button Text="Tomar Foto" Clicked="TomarFoto_Clicked" />
        <Button Text="Ver Registros" Clicked="VerRegistros_Clicked" />
       
                
                    <StackLayout>
                        <Image Source="{Binding RutaImagen}" HeightRequest="100" />
                        <Label Text="{Binding Nombre}" />
